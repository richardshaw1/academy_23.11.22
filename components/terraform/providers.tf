# ===================================================================================================================
# Terraform version and module source information
# ===================================================================================================================
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "4.23.0"
    }
  }
}

# ===================================================================================================================
# Cloud provider information
# ===================================================================================================================
provider "aws" {
  region = var.region_name
}
# ===================================================================================================================
# Internet Gateway
# ===================================================================================================================
# ===================================================================================================================
# VARIABLES
# ===================================================================================================================

variable "create_igw" {
  description = "Creates an Internet Gateway"
  default     = false
}

# ----------------------------------------------------------------------------------------------------------------------
# Create Internet Gateway
# ----------------------------------------------------------------------------------------------------------------------
resource "aws_internet_gateway" "env_igw" {
  count  = var.create_igw ? 1 : 0
  vpc_id = aws_vpc.env_vpc[0].id

  tags = merge(
    local.default_tags,
    {
      "Name" = "${local.name_prefix}-igw"
    },
  )
}
